@model AwesomeNetwork.Models.Users.Post

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Перегляд посту</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
</div>
<div class="container">
    <div class="row">
        <form class="row col-sm-12 " method="post"asp-controller="AccountManager" asp-action="AddComment" asp-route-PostId="@Model.Id">
        <input type="text" name="Text" placeholder="Коментар..." class="col-sm-10 form-control" />
        <button type="submit" class="col-sm-2 btn btn-secondary form-control">Коментувати</button>
        </form>
    </div>
    <div class="row">
        @if(Model.Comments!=null)
        @foreach(var comment in Model.Comments)
        {
            <div class="row col-sm-12 background-white m-2">
                <div class="row col-sm-12">
                    <a asp-controller="AccountManager" asp-action="UserPage" asp-route-Id="@comment.User.Id">@comment.User.UserName</a>
                </div>
                <div class="row col-sm-12">
                    @comment.Text
                </div>
                <div class="row col-sm-12 float-right">
                    @comment.CreationDate
                </div>
            </div>
        }
    </div>
</div>


